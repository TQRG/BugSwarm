package wycs.core

// A helper macro for handling array updates
define update([int] items, [int] nitems, int i, int item) is:
    |items| == |nitems|
    forall(int j):
        j != i ==> items[j] == nitems[j]
    nitems[i] == item

define generate([int] items, any element, int count) is:
    |items| == count
    forall(int j):
        items[j] == element

