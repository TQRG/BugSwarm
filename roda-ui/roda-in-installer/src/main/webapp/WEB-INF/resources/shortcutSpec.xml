<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="RODA"
                location="applications"/>
  <shortcut
    name="RODA-in"
    target="$JAVA_HOME\bin\java"
    commandLine="-Xmx256m -jar
     &quot;$INSTALL_PATH\roda-in.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="RODA-in ${roda.in.version}: Ferramenta de auxilio à ingestão"
    iconFile="$INSTALL_PATH\icons\roda-logo-75x75.ico"
    iconIndex="0"
    initialState="noShow"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">

    <createForPack name="Base"/>
  </shortcut>

  <shortcut
     name="RODA-in Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     initialState="noShow"
     iconFile="%SystemRoot%\system32\SHELL32.dll"
     iconIndex="31"
     workingDirectory=""
     description="This uninstalls RODA-in">
     <createForPack name="Base" />
   </shortcut>
</shortcuts>
