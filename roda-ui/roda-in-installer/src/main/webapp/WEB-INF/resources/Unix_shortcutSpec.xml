<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="RODA"
  location="applications"/>

    <shortcut
     name="RODA-in"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$JAVA_HOME/bin/java"
     commandLine="-Xmx256m -jar
     &quot;$INSTALL_PATH/roda-in.jar&quot;"
     workingDirectory="$INSTALL_PATH"
     description="RODA-in ${roda.in.version}: Ferramenta de auxilio à ingestão"
     iconFile="$INSTALL_PATH/icons/roda-logo-75x75.png"
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="noShow">
     <createForPack name="Base"/>
   </shortcut>

   <shortcut
     name="RODA-in Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$JAVA_HOME/bin/java"
     commandLine="-jar
     &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     initialState="noShow"
     iconFile="trashcan_full"
     iconIndex="0"
     workingDirectory=""
     type="Application"
     encoding="UTF-8"
     description="This uninstalls RODA-in">
     <createForPack name="Base" />
   </shortcut>

</shortcuts>
